<script>

    // JavaScript for Dark Mode Toggle
    document.addEventListener("DOMContentLoaded", function () {
        const darkModeToggle = document.getElementById("darkModeToggle");
        const darkModeClass = "dark-mode";
        const navbar = document.getElementById('navbar');
        const footer = document.querySelector('.footer');
        const footerContainer = document.getElementById('footerContainer');

        // Check if dark mode is already enabled
        if (localStorage.getItem("darkMode") === "enabled") {
            enableDarkMode();
        }

        darkModeToggle.addEventListener("click", function () {
            if (document.body.classList.contains(darkModeClass)) {
                disableDarkMode();
            } else {
                enableDarkMode();
            }
        });

        function enableDarkMode() {
            document.body.classList.add(darkModeClass);

            // Check if navbar exists before modifying it
            if (navbar) {
                navbar.classList.replace('navbar-light', 'navbar-dark');
                navbar.classList.replace('bg-light', 'bg-dark');
            }

            document.querySelectorAll('.card, .form-control, textarea, .btn, table, tr, .list-unstyled li, .technical-skills')
                .forEach(element => {
                    element.classList.add('bg-dark-mode', 'text-dark-mode');
                });

            // Check if footer and footerContainer exist before modifying them
            if (footer) {
                footer.classList.add('footer-dark-mode');
            }

            if (footerContainer) {
                footerContainer.classList.replace('bg-light', 'bg-dark');
            }

            darkModeToggle.innerHTML = '<i class="bi bi-brightness-high"></i> Light Mode';
            localStorage.setItem("darkMode", "enabled");
        }

        function disableDarkMode() {
            document.body.classList.remove(darkModeClass);

            // Check if navbar exists before modifying it
            if (navbar) {
                navbar.classList.replace('navbar-dark', 'navbar-light');
                navbar.classList.replace('bg-dark', 'bg-light');
            }

            document.querySelectorAll('.card, .form-control, textarea, .btn, table, tr, .list-unstyled li, .technical-skills')
                .forEach(element => {
                    element.classList.remove('bg-dark-mode', 'text-dark-mode');
                });

            // Check if footer and footerContainer exist before modifying them
            if (footer) {
                footer.classList.remove('footer-dark-mode');
            }

            if (footerContainer) {
                footerContainer.classList.replace('bg-dark', 'bg-light');
            }

            darkModeToggle.innerHTML = '<i class="bi bi-moon"></i> Dark Mode';
            localStorage.setItem("darkMode", "disabled");
        }
    });


</script>